server {
    listen 80;
    server_name wordpress.devconecta.com.br;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name wordpress.devconecta.com.br;

    ssl_certificate /etc/nginx/ssl/devconecta.com.br/devconecta.com.br.pem;
    ssl_certificate_key /etc/nginx/ssl/devconecta.com.br/devconecta.com.br.key;

    client_max_body_size 100M;

    root /var/www/html/wordpress;
    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        fastcgi_index index.php;
        fastcgi_intercept_errors off;
        fastcgi_buffer_size 16k;
        fastcgi_buffers 4 16k;
    }

    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|otf)$ {
        try_files $uri =404;
        access_log off;
        log_not_found off;
        expires max;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
    }

    error_log /var/log/nginx/wordpress.devconecta.com.br_error.log;
    access_log /var/log/nginx/wordpress.devconecta.com.br_access.log;
}

server {
    listen 80;
    listen [::]:80;

    server_name ~^(?<vhost>.+)\.localhost$;
    return 301 https://$host$request_uri; 
}

server {
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;
    server_name ~^(?<vhost>.+)\.localhost$;

    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;

    location / {
        root /var/www/html/$vhost/public;
        try_files $uri /index.php$is_args$args;
    }

    location ~ \.php$ {
        root /var/www/html/$vhost/public;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass php:9000;
        fastcgi_index index.php;
        fastcgi_intercept_errors off;
        fastcgi_buffer_size 16k;
        fastcgi_buffers 4 16k;
    }

    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}

